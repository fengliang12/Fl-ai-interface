{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "incremental": false,
    "composite": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}